{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "jsx": "react",
      "skipLibCheck": true,
      "sourceMap": true,
      "outDir": "dist",
      "rootDir": "src",
      "allowJs": false,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*", "sendMail.ts"],
    "exclude": ["node_modules", "dist"]
  }